#if 1
#include <stdio.h>
#include <string.h>

int get_num(void) {
	int num;
	printf("양수입력 : ");
	scanf("%d", &num);
	return num;
}

int main(void) {
	int result;

	result = get_num();
	printf("반환값 : %d\n", result);

	return  0;
}
#endif
