#if 1
#include <stdio.h>
#include <string.h>

int main(void) {
	int a = 10;
	double b = 3.5;
	void* vp;

	vp = &a;
	printf("a : %d\n", *(int* )vp);

	vp = &b;
	printf("b : %.1lf\n", *(double*)vp);
	
	return 0;
}
#endif
