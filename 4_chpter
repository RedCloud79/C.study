#if 1
#include <stdio.h>
#include <string.h>

void print_char(char ch, int count) {
	int i;

	for (i = 0; i < count; i++) {
		printf("%c", ch);

	}
}

int main(void) {
	print_char('@', 5);

	return  0;
}
#endif
