# CbyC_study
C/C++언어 정리

#if 1
#include <stdio.h>

int main(int argc, char** argv) {
	int ary[3] = { 10,20,30 };
	int* pa = ary;
	int i;

	printf("배열의 값: ");
	for (i = 0; i < 3; i++) {
		printf("%5d", *pa); // *(pa++) 로변경하고 아랫값을 지워서 하나로 합쳐도 동작한다.
		pa++;
	}
	return 0;
}

#endif

@1차
int ia[3] = {1,2,3};
ia[0] <=> *ia <=>*(ia+0)
@2차
int iaa[2][3] = {1,2,3,4,5,6};
iaa[1][2] <=> *(iaa[1]+2) <=> *(*(iaa+1)+2)

int i=3;
int j = i+1;
int k = 3+1;
