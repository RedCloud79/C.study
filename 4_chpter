#if 1
#include <stdio.h>
#include <string.h>
int sum(int x, int y);

int main(void) {
	int a = 10, b = 20;
	int result;

	result = sum(a, b);
	printf("result : %d\n", result);
	
	return  0;
}

int sum(int x, int y) {
	int temp;
	temp = x + y;
	return temp;
}
#endif
