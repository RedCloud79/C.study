#if 1
#include <stdio.h>
#include <string.h>
struct bigint {
	int ia[1000];
};
int main() {
	
	printf("%zd\n", sizeof(bigint));
}

#endif
@@@@@@@@@@@@@@@@@@@@@@@@
#if 1
#include <stdio.h>
#include <string.h>
struct bigint {
	int ia[4096];
};
void f(bigint bi) {
	bi.ia[0]++;
	printf("%d,", bi.ia[0]);
	f(bi);
}
int main() {
	bigint bi = { 0, };
	f(bi);
}

#endif
