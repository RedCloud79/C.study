#if 1
#include <stdio.h>
#include <string.h>

int main(void) {
	int sum = 0;
	for (int i = 0; i <= 100; i++) {
		if (i % 3 == 0) continue;
		sum += i;
	}
	printf("%d\n", sum);

	return  0;
}
#endif
