#if 1
#include <stdio.h>
#include <string.h>

int main(void) {

	for (int i = 2; i < 10; i++) {
		for (int j = 1; j < 10; j++) {
			printf("%d * %d = %d\n", i, j, j * i);
		}
		printf("\n");
	}
	return  0;
}
#endif
