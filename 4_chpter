#if 1
#include <stdio.h>
#include <string.h>

int main(void) {
	int i;
	int sum = 0;

	for (i = 0; i <= 10; i++) {
		sum += i;
		if (sum > 30) break;
	}
	printf("누적한 값 : %d\n", sum);
	printf("마지막으로 더한 값 : %d\n", i);

	return  0;
}
#endif
